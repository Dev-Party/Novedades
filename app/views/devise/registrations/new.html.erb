<h2>Crea tu cuenta de Vox</h2>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: 'form-horizontal'}) do |f| %>
  <%= devise_error_messages! %>
<hr>
<h3> Datos Obligatorios:</h3>

<div class="form-group">
    <%= f.label :email, "Dirección de correo electrónico", class: 'col-sm-2 control-label'  %>
    <div class="col-sm-6">
        <%= f.email_field :email, class: 'form-control', size: "10", maxlength: "110", placeholder: "Ingrese una dirección de correo electrónico valida, nos comunicaremos con usted por ese medio."  %>
    </div>
</div>

<div class="form-group">
    <%= f.label :password, "Clave de acceso", class: 'col-sm-2 control-label'  %>
    <div class="col-sm-6">
        <%= f.password_field :password, autocomplete: "off", class: 'form-control'  %>
    </div>
</div>

<div class="form-group">
    <%= f.label :password_confirmation, "Confirme su clave de acceso",class: 'col-sm-2 control-label' %>
    <div class="col-sm-6">
        <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control'  %>
    </div>
</div>

<hr>
<h3> Puede completarlos más tarde:</h3>
  <div class="form-group">
    <%= f.label :nombre, "Nombre Cliente", class: 'col-sm-2 control-label' %><br>
    <div class="col-sm-6">
    <%= f.text_field :nombre,  class: "form-control", size: "10", maxlength: "110", placeholder: "Ingrese el nombre con que se identiicará al cliente." %>
    </div>
  </div>



<div class="form-group">
    <div class="col-sm-offset-2 col-sm-6">
        <%= f.submit "Crear cuenta", class: "btn btn-primary" %>
    </div>
</div>

<div class="form-group">
    <div class="col-sm-offset-2 col-sm-6">
        <%= render "devise/shared/links" %>
    </div>
</div>
<% end %>