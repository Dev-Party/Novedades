<h2>Editar Usuario</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: 'form-horizontal' }) do |f| %>
<%= devise_error_messages! %>
<hr>
<div class="form-group">
    <%= f.label :nombre, "Nombre de Cliente", class: 'col-sm-2 control-label' %><br>
    <div class="col-sm-6">
    <%= f.text_field :nombre,  class: "form-control", size: "10", maxlength: "110" , placeholder: "Ingrese el nombre que utilizará para identificar el Cliente en el sistema"%>
    </div>
 </div>

<div class="form-group">
    <%= f.label :email, "Dirección de correo electrónico", class: 'col-sm-2 control-label'  %>
    <div class="col-sm-6">
        <%= f.email_field :email, class: 'form-control', size: "10", maxlength: "110", placeholder: "Ingrese una dirección de correo electrónico valida, nos comunicaremos con el cliente por ese medio."  %>
    </div>
</div>

<% if f.object.encrypted_password.present? %>
<div class="form-group">
    <%= f.label :password, "Clave de acceso", class: 'col-sm-2 control-label'  %><i>(deje el campo en blanco si no quiere cambiar su clave)</i><br/>
    <div class="col-sm-6">
        <%= f.password_field :password, autocomplete: "off", class: 'form-control'  %>
    </div>
</div>

<div class="form-group">
    <%= f.label :password_confirmation, "Repita clave", class: 'col-sm-2 control-label' %>
    <div class="col-sm-6">
        <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control'  %>
    </div>
</div>
<% end %>

<hr>
<% if f.object.encrypted_password.present? %>
<div class="form-group">
    <%= f.label :current_password,"Su clave actual", class: 'col-sm-2 control-label' %>
    <div class="col-sm-6">
        <%= f.password_field :current_password, autocomplete: "off", class: 'form-control' %>
        <span class="help-block">Necesitamos tu clave actual, para salvar los cambios.</span>
    </div>
</div>
<% end %>

<div class="form-group">
    <div class="col-sm-offset-2 col-sm-6">
        <%= f.submit "Actualizar", class: "btn btn-primary" %>
    </div>
</div>

<% end %>

<h5>Cancelar la cuenta.</h5>

<p>¿Desea cancelar el servicio? <%= button_to "Eliminar cuenta", registration_path(resource_name), data: { confirm: "¿Estas seguro de eliminar esta cuenta?" }, method: :delete, class: 'btn btn-default btn-xs' %></p>

<%= link_to ' Atrás', :back, :class => 'btn btn-link fa fa-arrow-left'  %>