<h1>Lista de Usuarios</h1>

<div class="table-responsive">
  <table id="users-list" class="table table-striped table-hover table-condensed">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Correo electr√≥nico</th>
      <th>Tipo</th>
      <th>Habilitado</th>
      <th>Acciones</th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.nombre %></td>
        <td><%= user.email %></td>
        <td><%= user.tipo %></td>
        <td><%= user.habilitado %></td>
        <td><%= link_to 'Mostrar', user, :class => 'btn btn-default btn-xs' %></td>
        <td><%= link_to 'Editar', edit_user_path(user), :class => 'btn btn-default btn-xs' %></td>
        <td><%= link_to 'Eliminar', user, :class => 'btn btn-danger btn-xs', :method => :delete, data: { confirm: "Esta seguro que desea borrar este usuario: #{user.nombre}?"} %></td>
      </tr>
    <% end %>
  </tbody>
</table>

</div>
<br>

<%= link_to 'Registrar Usuario', new_user_path, :class => 'btn btn-primary' %>