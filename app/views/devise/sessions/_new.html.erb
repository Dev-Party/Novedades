<div class="container-fluid" align="center">
    <p></p>
    <div class="media">
        <img class="media-object" src="http://placehold.it/140x140">
        </a>
        <div class="media-body"></div>
    </div>
    <p></p>

    <div class="authform">
      <%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :role => 'form'}) do |f| %>
        <%= devise_error_messages! %>
        <div class="form-group">
          <%= f.label " Usuario", class: 'btn glyphicon glyphicon-user' %>
          <%= f.email_field :email, :autofocus => true, class: 'form-control', maxlength: "110", placeholder: "Nombre de usuario" %>
        </div>
        <div class="form-group">
          <%= f.label :password, "  Contraseña", class: 'glyphicon glyphicon-lock' %>
          <%= f.password_field :password, class: 'form-control', maxlength: "110", placeholder: "Contraseña" %>
        </div>
        <div class="form-group">
          <%= f.submit 'Ingresar', :class => 'btn btn-lg btn-success' %>
        </div>
        <div class="form-group">
          <% if devise_mapping.rememberable? -%>
            <div class="checkbox" style="width:150px">
              <label>
                <%= f.check_box :remember_me %> Recordarme
              </label>
            </div>
          <% end -%>
          <%- if devise_mapping.recoverable? %>
            <%= link_to "Olvidé mi contraseña", new_password_path(resource_name), class: 'btn-litle' %>
          <% end -%>
          <%- if devise_mapping.registerable? %>
            <%= link_to 'Registrarse', new_registration_path(resource_name), class: 'btn-litle'  %>
          <% end -%>
        </div>


      <% end %>
    </div>

</div>
