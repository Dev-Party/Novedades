<h1>Listing Notifications</h1>

<table id="notifications-list">
  <thead>
    <tr>
      <th>Project</th>
      <th>Title</th>
      <th>Date</th>
      <th>Message</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @notifications.each do |notification| %>
      <tr>
        <td><%= notification.title %></td>
        <td><%= notification.date %></td>
        <td><%= notification.message %></td>
        <td><%= link_to 'Ver mÃ¡s', project_notification_path(notification.project_id,notification.id) %></td>
        <td><%= link_to 'Editar', edit_project_notification_path(notification.project_id,notification.id) %></td>
        <td><%= link_to 'Destroy',  project_notification_path(notification.project_id,notification.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
