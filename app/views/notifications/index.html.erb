<div class="container-fluid">
<h1>Listando Novedades del Caso</h1>
<h2><%= @notifications.first.project.name %></h2>
<table id="notifications-list" class="table">
  <thead>
    <tr>
      <th>Caso</th>
      <th>Fecha</th>
      <th>Título</th>
      <th>Archivos adjuntos</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @notifications.each do |notification| %>
      <tr>
        <td><%= notification.title %></td>
        <td><%= notification.date.to_formatted_s(:long) %></td>
        <td><%= notification.message %></td>
        <td><span class="badge alert-warning"><%= notification.archivos_adjuntos %></span></td>
        <td><%= link_to 'Ver más', project_notification_path(notification.project_id, notification.id), class: "btn btn-default" %></td>
        <% if current_user.tipo == 1 %>
          <td><%= link_to 'Editar', edit_project_notification_path(notification.project_id,notification.id), class: "btn btn-default" %></td>
          <td><%= link_to 'Destroy',  project_notification_path(notification.project_id,notification.id), class: "btn btn-default", method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Notification', new_project_notification_path if params[:project_id] && current_user.tipo == 1 %>
</div>
