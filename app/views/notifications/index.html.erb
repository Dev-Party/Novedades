<div class="container-fluid">
<div class="form-group">
 <h2>Listando Novedades</h2>
 <%= link_to ' Nueva Novedad', new_notification_path, class: "btn btn-primary fa fa-newspaper-o pull-right" unless params[:project_id] || current_user.tipo == 2 %>

  <%= link_to ' Nueva Novedad', new_project_notification_path, title: "Nueva novedad para el caso seleccionado." , class: "btn btn-primary fa fa-folder-o pull-right" if params[:project_id] && current_user.tipo == 1 %>
</div>
<% @project =  Project.find_by_id(params[:project_id]) %>
<h2><%= @project.name if @project  %></h2>
<table id="notifications-list" class="table table-striped">
  <thead>
    <tr>
      <th>Título novedad</th>
      <th>Fecha</th>
      <th><span class="fa fa-paperclip"> Archivos adjuntos</th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @notifications.each do |notification| %>
     <%= read_mark_line(notification) %>
        <td><%= notification.title %></td>
        <td><%= notification.date.to_formatted_s(:long) %></td>
        <td></span><%= attachment_badge(notification) %><%= notification.archivos_adjuntos %></span></td>
        <td><%= link_to ' Ver más', project_notification_path(notification.project_id, notification.id), class: "btn btn-default fa fa-share" %>
        <% if current_user.tipo == 1 %>
          <td><%= link_to 'Editar', edit_project_notification_path(notification.project_id,notification.id), class: "btn btn-default" %></td>
          <td><%= link_to 'Destroy',  project_notification_path(notification.project_id,notification.id), class: "btn btn-default", method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

</div>

<% breadcrumb :project, @project if @project %>
