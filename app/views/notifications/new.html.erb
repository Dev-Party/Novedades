<h1>Nueva Novedad</h1>

<%= form_for :project do |f| %>
 <div class="form-group">
  <%= f.label :customer_id, "Cliente: ", class: 'control-label' %><br>
  <% if params[:project_id] %>
    <% if @projects %>
       <%= @projects.find(params[:project_id]).customer_name %>
       <%= f.hidden_field :customer_id, value: @projects.find(params[:project_id]).customer_id, class: 'form-control' %>
      <% else %>
       <%= @project.customer_name %>
       <%= f.hidden_field :customer_id, :value => @project.customer_id, class: 'form-control' %>
      <% end %>
  <% else%>
    <%= f.select :customer_id, options_for_select(@customers.collect { |user|
    [user.nombre, user.id] }, 0), {prompt: 'Seleccione un Cliente'}, { class: "form-control", id: 'customer_select' } %>
  <% end %>
   </div>
 <hr size="1" />
<% end %>

<%= render 'form' %>

