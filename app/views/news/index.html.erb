<p id="notice"><%= notice %></p>

<h1>Listing News</h1>

<table id="news-list" style="border:1px solid black;border-collapse:collapse;">
  <thead>
    <tr>
      <th>Title</th>
      <th>Message</th>
      <th>Date</th>
      <th>Ver más</th>
    </tr>
  </thead>

  <tbody>
    <% @news.each do |news| %>
      <tr style="border:1px solid black;">
        <td><%= news.title %></td>
        <td style="border:1px solid black;"><%= news.message %></td>
        <td><%= news.date %></td>
        <td style="border:1px solid black;"><%= link_to 'Ver más', news %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<h1>Listing News - Admin. Options</h1>
<table id="news-list-admin">
  <thead>
    <tr>
      <th>Project</th>
      <th>Title</th>
      <th>Date</th>
      <th>Message</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @news.each do |news| %>
      <tr>

        <td><%= news.title %></td>
        <td><%= news.message %></td>
        <td><%= news.date %></td>
        <td><%= link_to 'Show', news %></td>

        <td><%= link_to 'Edit', edit_news_path(news) %></td>
        <td><%= link_to 'Destroy', news, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

