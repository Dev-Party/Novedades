<p id="notice"><%= notice %></p>

<h1>Listing Attachments</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Notification</th>
      <th>attachment</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @attachments.each do |attachment| %>
      <tr>
        <td><%= attachment.title %></td>
        <td><%= attachment.notification_id %></td>
        <td>
          <% if attachment.profile_image_id? %>
            <%= link_to image_tag(attachment_url(attachment, :profile_image, :fill, 100, 100)) %>
          <% end %>
        </td>
        <td><%= link_to 'Show', attachment %></td>
        <td><%= link_to 'Edit', edit_attachment_path(attachment) %></td>
        <td><%= link_to 'Destroy', attachment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%=
if params[:notification_id]
    link_to 'New Attachment', new_notification_attachment_path
end
%>
