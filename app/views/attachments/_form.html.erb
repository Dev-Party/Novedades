<%= form_for(@attachment) do |f| %>
  <% if @attachment.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@attachment.errors.count, "error") %> prohibited this attachment from being saved:</h2>

      <ul>
      <% @attachment.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :notification_id %><br>
    <%= f.text_field :notification_id %>
  </div>

  <div class="field">
    <%= f.label :profile_image, "Archivos Adjuntos" %><br>
    <%= f.attachment_field :profile_image %>

    <% if @attachment.profile_image_id? %>
      <%= image_tag attachment_url(@attachment, :profile_image, :fill, 100, 100) %>

      <%= f.check_box :remove_profile_image %>
      <%= f.label :remove_profile_image %>
    <% end %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
