<%= form_for(@project) do |f| %>
  <% if @project.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@project.errors.count, "error") %> prohibited this project from being saved:</h2>
      <ul>
      <% @project.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :user_id, "Cliente", class: 'control-label' %><br>
    <% users_array = User.all.where(tipo: 2).map { |user| [user.nombre, user.id] } %>
    <%= f.select(:user_id, users_array, {prompt: 'Seleccione un Cliente', selected: @project.user_id}, class: "form-control", id: "customer_select" )  %>
  </div>


  <div class="form-group">
    <%= f.label :name, 'Nombre Proyecto: ', class: 'control-label' %><br>
    <%= f.text_field :name, placeholder: "ingrese nombre del proyecto." , class: 'form-control' %>
  </div>


  <div class="form-group">
  <div class="actions">
    <%= f.submit 'Guardar', class: 'btn btn-primary' %>
  </div>

<% end %>
