<div class="container-fluid">
 <h1>Usuario: <%= current_user.nombre %></h1>
<h2>Lista Casos</h2>
<table id="projects-list" class="table">
  <thead>
    <tr>
      <th>Nº</th>
      <th>Caso</th>
      <th><span class="fa fa-folder-open"></span> Expediente N°</th>
      <th><span class="fa fa-university"></span> Juzgado</th>
      <th><span class="fa fa-newspaper-o"></span> Novedades</th>
      <th>Última Novedad</th>
      <th colspan="3">Acción</th>
    </tr>
  </thead>
  <tbody>
    <% @projects.each do |project| %>
      <tr>
        <td><%= project.id %></td>
        <td><%= project.name %></td>
        <td>EXP.N° 000.000</td>
        <td>Juzgado en lo Contencioso Administrativo N° 1</td>
        <td><span class="badge alert-warning"><%= project.news_count %></span></td>
        <td><%= project.last_update %></td>
        <td><%= link_to 'Ver novedades', project_notifications_path(project), type: "button", class: "btn btn-default" %></td>
        <% if current_user.tipo == 1 %>
        <td><%= link_to 'Show', project %></td>
        <td><%= link_to 'Edit', edit_project_path(project) %></td>
        <td><%= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<br>

<%= link_to 'Nuevo caso', new_project_path if current_user.tipo == 1 %>
