<div class="container-fluid">
  <div class="form-group">
   <h2>Lista de Casos</h2>
    <%= link_to ' Nuevo caso', new_project_path, class: "btn btn-primary fa fa-folder-o pull-right" if current_user.tipo == 1 %>
  </div>

<table id="projects-list" class="table table-striped table-hover table-condensed">
  <thead>
    <tr>
      <th headers="Caso">Caso</th>
      <th headers="Expediente N°" scope="col"><span class="fa fa-folder-open"></span> Expediente N°</th>
      <th headers="Juzgado"><span class="fa fa-university"></span> Juzgado</th>
      <th headers="Novedades" class="text-center"><span class="fa fa-newspaper-o"></span> Novedades</th>
      <th headers="Última novedad">Última Novedad</th>
      <th headers="Opciones"colspan="3">Acción</th>
    </tr>
  </thead>
  <tbody>
    <% @projects.each do |project| %>
      <tr>
        <td><%= project.name %></td>
        <td><%= project.judicial_record_number %></td>
        <td><%= court_name(project.court.to_i - 1) %></td>
        <td class="text-center"><%= project_badge(project) %><%= project.news_count %></span></td>
        <td><%= project.last_update %></td>
        <td><%= link_to ' Ver novedades', project_notifications_path(project), type: "button", class: "btn btn-default fa fa-folder-o" %></td>
        <% if current_user.tipo == 1 %>
        <td><%= link_to ' Editar', edit_project_path(project), class: "btn btn-warning fa fa-pencil", title: 'Editar caso', data: { toggle: 'tooltip', placement: 'top', original_title: 'Editar detalles del caso' }  %></td>
        <td><%= link_to ' Eliminar', project, class:"btn btn-danger fa fa-trash-o", method: :delete, data: { confirm: "¿Esta seguro que desea borrar este caso? \n" + project.name + ""} %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<h4><%= "Casos de:" + current_user.nombre if current_user.tipo == 2 %></h4>
</div>
<br>

<% breadcrumb :projects %>
